{
  "kind": "collectionType",
  "collectionName": "locations",
  "info": {
    "singularName": "location",
    "pluralName": "locations",
    "displayName": "Location",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "location": {
      "type": "component",
      "repeatable": false,
      "component": "base.location"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "userEvents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-event.user-event",
      "mappedBy": "where"
    },
    "groupEventsLocations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-group-event.user-group-event",
      "mappedBy": "location"
    },
    "link": {
      "type": "string",
      "default": "E.g. Wikipedia Link for more Infos about this place"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "park",
        "skatepark",
        "gym-hall",
        "basketball-court",
        "other"
      ],
      "required": false,
      "default": "other"
    },
    "visitors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "visitedLocations"
    }
  }
}
